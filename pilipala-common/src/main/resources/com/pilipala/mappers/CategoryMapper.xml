 			<if test="bean.sort!=null">
 				#{bean.sort},
			 </if>
		 </trim>
		on DUPLICATE key update
		<trim prefix="" suffix="" suffixOverrides=",">
			<if test="bean.categoryName!=null">
				category_name =VALUES(category_name),
			</if>
			<if test="bean.pCategoryId!=null">
				p_category_id =VALUES(p_category_id),
			</if>
			<if test="bean.sort!=null">
				sort =VALUES(sort),
			</if>

		</trim>
	</insert>
	<!--添加(批量插入)-->
	<insert id="insertBatch" parameterType="com.pilipala.entity.po.Category">
		insert into category(category_code,category_name,p_category_id,sort)values
		<foreach collection="list" item="item" separator=",">
			(#{item.categoryCode},#{item.categoryName},#{item.pCategoryId},#{item.sort})
		</foreach>
	 </insert>
	<!--批量插入或更新-->
	<insert id="insertOrUpdateBatch" parameterType="com.pilipala.entity.po.Category">
		insert into category(category_code,category_name,p_category_id,sort)values
		<foreach collection="list" item="item" separator=",">
			(#{item.categoryCode},#{item.categoryName},#{item.pCategoryId},#{item.sort})
		</foreach>
			on DUPLICATE key update
            category_id= VALUES(category_id),category_code= VALUES(category_code),category_name= VALUES(category_name),p_category_id= VALUES(p_category_id),sort= VALUES(sort)
	</insert>
	<!-- 根据"CategoryId"查询-->
	<select id="selectByCategoryId" resultMap="base_result_map">
		select <include refid="base_column_list"/>  from category where category_id=#{categoryId}
	</select>
	<!-- 根据"CategoryId"更新-->
	<update id="updateByCategoryId" parameterType="com.pilipala.entity.po.Category">
		update  category
		<set>
			<if test="bean.categoryId!=null">
			category_id=#{bean.categoryId},
			</if>
			<if test="bean.categoryCode!=null">
			category_code=#{bean.categoryCode},
